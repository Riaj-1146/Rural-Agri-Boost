<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"

    android:gravity="center">


    <TextView
        android:id="@+id/text_view_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="To update search a technology by name"
        android:textSize="26dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp" />


    <EditText
        android:id="@+id/edit_text_tec_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Technology Name"
        android:textSize="27dp"
        android:layout_marginBottom="10dp"
        android:background="@android:drawable/editbox_background"/>

    <TextView
        android:id="@+id/text_view_tec_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Technology ID"
        android:padding="8dp"
        android:background="@android:color/darker_gray"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:enabled="false"/>

    <ImageView
        android:id="@+id/image_view_tec"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="16dp"
        android:background="@drawable/ser_img5"/>

    <Button
        android:id="@+id/button_select_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Image"
        android:backgroundTint="#4C5AA9"
        android:layout_marginTop="16dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:weightSum="2">

        <Button
            android:id="@+id/button_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#017473"
            android:text="Search" />

        <Button
            android:id="@+id/button_update"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#2F6F1A"
            android:text="Update Technology" />
    </LinearLayout>

</LinearLayout>