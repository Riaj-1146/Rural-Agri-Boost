<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="15dp"
        android:text="Insert An Advance Agriculture Technology"
        android:textSize="25dp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/img_image"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_marginTop="15dp"
        android:scaleType="centerCrop"
        android:background="#FBF8F8"
        android:src="@drawable/insert_img_icon3" />

    <EditText
        android:id="@+id/et_tech_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:hint="Technology Name"
        android:background="@android:drawable/editbox_background"
        android:textSize="30dp"/>

    <Button
        android:id="@+id/bt_choose_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose Image from file"
       android:layout_marginTop="20dp"
        android:backgroundTint="#0A6E80"/>

    <Button
        android:id="@+id/bt_inset_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Insert Image "
        android:layout_marginTop="10dp"
        android:backgroundTint="#0A6E80"/>

</LinearLayout>

